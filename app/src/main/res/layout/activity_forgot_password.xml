<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword"
    android:orientation="vertical"
    android:background="@color/light40"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/light100"
        >
        <ImageButton
            android:id="@+id/forgot_back"
            android:background="@color/light100"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/arrowleft"
            android:contentDescription="@string/app_avatar"/>
        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Quên mật khẩu"
            android:textSize="@dimen/title2"
            android:fontFamily="@font/robuto_font"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/title2"
        android:layout_marginTop="100dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/background_border">
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Nhập số điện thoại đã đăng kí tài khoản"
                android:fontFamily="@font/robuto_font"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                app:errorEnabled="true"
                android:layout_marginTop="15dp"

                app:helperTextTextColor="@color/red100">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/forgot_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_input"
                    android:ems="10"
                    android:hint="Số điện thoại"
                    android:inputType="number"
                    android:textColorHint="@color/dark50"
                    android:textSize="@dimen/title3" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/forgot_button"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gửi OTP"
                android:textSize="@dimen/title3"
                android:textColor="@color/light100"
                android:fontFamily="@font/robuto_font"
                android:background="@drawable/background_border"
                android:backgroundTint="@color/blue80"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>