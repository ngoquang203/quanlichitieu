<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:theme="@style/Base.Theme.ThemeLight"
    android:backgroundTint="@color/light100">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="@color/yellow20"
        android:layout_marginTop="-50dp"
        app:cardCornerRadius="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="70dp"
                android:paddingHorizontal="20dp">
                <ImageButton
                    android:id="@+id/main_avatar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/user"
                    android:background="@drawable/background_ciclek"
                    android:contentDescription="@string/app_avatar"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="October"
                    android:textStyle="bold"
                    android:textSize="@dimen/title3" />
                <ImageButton
                    android:id="@+id/main_notification"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/notifiaction"
                    android:background="@drawable/background_nobutton"
                    android:contentDescription="@string/app_avatar"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Balance"
                android:textSize="@dimen/regular2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="$9400"
                android:textStyle="bold"
                android:textSize="@dimen/title1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_marginBottom="40dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/background_nobutton"
                android:backgroundTint="@color/green100"
                android:padding="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_nobutton"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/light100"
                    android:src="@drawable/frame_blue"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/light100"
                        android:textSize="@dimen/regular1"
                        android:text="Income"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/title2"
                        android:textStyle="bold"
                        android:textColor="@color/light100"
                        android:text="$5000"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:text=""/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/background_nobutton"
                android:backgroundTint="@color/red100"
                android:padding="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_nobutton"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/light100"
                    android:src="@drawable/frame_red"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/regular1"
                        android:textColor="@color/light100"
                        android:text="Expenses"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/title2"
                        android:textStyle="bold"
                        android:textColor="@color/light100"
                        android:text="$5000"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>