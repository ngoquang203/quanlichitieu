<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_input"
    android:paddingHorizontal="@dimen/regular2"
    android:paddingVertical="50dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dialog_notification_Tilte"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="@dimen/title1"
            android:textStyle="bold"/>
        <ImageButton
            android:id="@+id/layout_notification_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/close"
            android:background="@color/red100"
            android:contentDescription="@string/app_name"/>
    </LinearLayout>
    <TextView
        android:id="@+id/layout_notification_messenge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Messenge"
        android:textStyle="italic"
        android:textSize="@dimen/title2"/>
</LinearLayout>